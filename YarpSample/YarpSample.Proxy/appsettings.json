{
  "Logging" : {
    "LogLevel" : {
      "Default" : "Information",
      "Microsoft.AspNetCore" : "Warning"
    }
  },
  "AllowedHosts" : "*",
  "ReverseProxy" : {
    // Clusters tell the proxy where and how to forward requests
    "Clusters" : {
      // name of Claster
      "CustomerCluster" : {
        "Destinations" : {
          "customerServer" : {
            "Address" : "https://ya.ru/"
          }
        }
      }
    },
    // Routes tell the proxy which requests to forward
    "Routes": {
      "CustomerRoute": {
        "ClusterId": "CustomerCluster",
        "Match": {
          "Path": "/api/customers/{**catch-all}"
        }
      }
    }
  }
}
